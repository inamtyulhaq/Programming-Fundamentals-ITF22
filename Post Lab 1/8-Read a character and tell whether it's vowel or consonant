#include <stdio.h>
int main(){
    char alphabet;
    printf("Write any alphabet: ");
    scanf("%c", &alphabet);
    if(alphabet=='a' || alphabet=='e' || alphabet=='i' || alphabet
    =='o' || alphabet=='u' || alphabet=='A' || alphabet=='E'|| alphabet=='I' || alphabet=='O' || alphabet=='U'){
        printf("This alphabet is vowel");
    }
    else if(alphabet=='1' || alphabet=='2' || alphabet=='3' || alphabet =='4' || alphabet=='5' || alphabet=='6' || alphabet=='7'|| alphabet=='8' || alphabet=='9' || alphabet=='0'){
        printf("This is not an alphabet");
    }
    else if(alphabet>='a' && alphabet<='z'){
        printf("This alphabet is consonant");
    }
    else{
        printf("The input is invalid");
    }
    return 0;
}
